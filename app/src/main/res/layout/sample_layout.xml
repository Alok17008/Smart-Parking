<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0B24B1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/usernamepark"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/profile"
                android:gravity="center"
                android:hint="User details"
                android:paddingLeft="50dp"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="23dp"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/parkemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:hint="User email"
                android:paddingLeft="50dp"
                android:paddingBottom="15dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                android:textColorHint="#FFFFFF"
                android:textSize="22dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/parkvehicaltype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Vehical Type"
                android:paddingLeft="50dp"
                android:paddingBottom="15dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/parkvechicalno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Vehical no."
                android:paddingLeft="50dp"
                android:paddingBottom="15dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/parkdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Parked Date"
                android:paddingLeft="50dp"
                android:paddingBottom="15dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/Parkingtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Parked time"
                android:paddingLeft="50dp"
                android:paddingBottom="15dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="22sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
